<%- include("../partials/header.ejs") %>
<h1>Report morning</h1>
<%- include("../partials/error.ejs") %>
<%- include("../partials/success.ejs") %> 
<body>
    <form method="POST" action="/behavior/reporting/morning">
        <input type="range" name="mood" value="<%= mood %>" min=1 max=5>
        <input type="number" name="sleep_duration" value="<%= sleep_duration %>" min=0 max=24>
        <input type="range" name="sleep_quality" value="<%= sleep_quality %>" min=1 max=5>
        <input type="date" name="date" value="<%= date %>">
        <input type="submit" name="Submit Morning Report">
    </form>
</body>
<p><a href="/behavior/reporting">Press here</a> to return to the reporting page.</p>
<%- include("../partials/footer.ejs") %>